{{!
    @template theme_eguru/frontpage_numbers

    Blocks drawer template

    Example context (json): {
        "numberusers": "123",
        "numbercourses": "123",
        "numberactivities": "123"
    }
}}
<!--    <div class="container-fluid frontpage-numbers">   -->
    <div class="container frontpage-numbers">
	<h2 id="numerosdoportal">Números do Portal</h2>
        <div class="row">
       
            <div class="col-sm number" id="conteudocontador">
                <h3 class="numerocontador">{{{ numberusers }}}</h3>
				<span class="fa fa-users fa-4x"><span id="descricaocontador"> Usuários</span></span>
            
            </div>

            <div class="col-sm number" id="conteudocontador">
			<h3 class="numerocontador">{{{ numbercourses }}}</h3>
                <span class="fa fa-tasks fa-4x"><span id="descricaocontador"> Cursos</span></span>

            </div>

            <div class="col-sm number" id="conteudocontador">
			<h3 class="numerocontador">{{{ numberactivities }}}</h3>
                <span class="fa fa-pencil fa-4x"><span id="descricaocontador"> Atividades</span></span>
				
            </div>
        </div>
    </div>
