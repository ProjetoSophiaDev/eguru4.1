{{!
    @template theme_eguru/frontpage_numbers

    Blocks drawer template

    Example context (json): {
        "numberusers": "123",
        "numbercourses": "123",
        "numberactivities": "123"
    }
}}
<!--    <div class="container-fluid frontpage-numbers">   -->
    <div class="container frontpage-numbers">
	<h2 id="numerosdoportal">Números do Portal</h2>
        <div class="row">
       
            <div class="col-sm number">
                <span class="fa fa-user-circle fa-4x"></span>
                <h3>{{{ numberusers }}}</h3>
                <hr />
                <p>Usuários</p>
            </div>

            <div class="col-sm number">
                <span class="fa fa-graduation-cap fa-4x"></span>
                <h3>{{{ numbercourses }}}</h3>
                <hr />
                <p>Cursos</p>
            </div>

            <div class="col-sm number">
                <span class="fa fa-puzzle-piece fa-4x"></span>
                <h3>{{{ numberactivities }}}</h3>
                <hr />
                <p>Atividades</p>
            </div>
        </div>
    </div>
